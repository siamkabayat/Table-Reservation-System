<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="500.0" spacing="20.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.sbayat.sbtablereservationmanagementsystem.gui.PrimaryWindowController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <HBox alignment="TOP_CENTER" prefHeight="50.0" prefWidth="460.0">
            <children>
                <Button fx:id="addNewReservation" alignment="TOP_CENTER" mnemonicParsing="false" onAction="#handleAddButton" prefHeight="10.0" prefWidth="120.0" text="New Reservation" textAlignment="CENTER" />
            </children>
        </HBox>
        <HBox prefHeight="250.0" prefWidth="200.0">
            <children>
                <ListView fx:id="reservationsListView" prefHeight="276.0" prefWidth="460.0" />
            </children>
        </HBox>
      <HBox prefHeight="100.0">
         <children>
            <VBox alignment="BOTTOM_LEFT" prefHeight="200.0" prefWidth="230.0">
               <children>
                  <Button mnemonicParsing="false" prefHeight="10.0" prefWidth="120.0" text="Show Full Details" />
                  <Button mnemonicParsing="false" prefHeight="10.0" prefWidth="120.0" text="Edit Reservation">
                     <VBox.margin>
                        <Insets top="15.0" />
                     </VBox.margin>
                  </Button>
               </children>
            </VBox>
            <VBox alignment="BOTTOM_RIGHT" prefHeight="200.0" prefWidth="230.0">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
               <children>
                  <Button alignment="CENTER_RIGHT" contentDisplay="RIGHT" mnemonicParsing="false" prefHeight="10.0" prefWidth="120.0" text="Delete Reservation" />
               </children>
            </VBox>
         </children>
      </HBox>
    </children>
</VBox>
