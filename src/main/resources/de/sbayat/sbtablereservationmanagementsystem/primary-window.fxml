<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="500.0" spacing="20.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="de.sbayat.sbtablereservationmanagementsystem.gui.PrimaryWindowController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <HBox alignment="TOP_CENTER" prefHeight="50.0" prefWidth="460.0">
            <children>
                <Button fx:id="addNewReservation" alignment="TOP_CENTER" mnemonicParsing="false" onAction="#handleAddButton" prefHeight="10.0" prefWidth="120.0" text="New Reservation" textAlignment="CENTER" />
            </children>
        </HBox>
        <HBox prefHeight="250.0" prefWidth="200.0">
            <children>
                <ListView fx:id="reservationsListView" prefHeight="276.0" prefWidth="460.0" />
            </children>
        </HBox>
        <VBox alignment="TOP_CENTER" prefHeight="90.0" prefWidth="460.0">
            <children>
                <Button fx:id="editReservation" mnemonicParsing="false" onAction="#handleEditButton" prefHeight="10.0" prefWidth="120.0" text="Edit Selected" textAlignment="CENTER">
                    <VBox.margin>
                        <Insets bottom="15.0" />
                    </VBox.margin>
                </Button>
                <Button fx:id="deleteReservation" mnemonicParsing="false" onAction="#handleDeleteButton" prefHeight="10.0" prefWidth="120.0" text="Delete Selected" textAlignment="CENTER" />
            </children>
        </VBox>
    </children>
</VBox>
